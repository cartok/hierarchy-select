{
  "name": "@cartok/hierarchy-select",
  "version": "0.0.6",
  "description": "Hierarchy Select jQuery Plugin for Twitter Bootstrap",
  "author": {
    "name": "Evgeniy NeoFusion",
    "email": "evgeniy@neofusion.ru"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NeoFusion/hierarchy-select.git"
  },
  "homepage": "https://github.com/NeoFusion/hierarchy-select",
  "bugs": {
    "url": "https://github.com/NeoFusion/hierarchy-select/issues"
  },
  "main": "build/hierarchy-select.js",
  "files": [
    "build"
  ],
  "keywords": [
    "bootstrap",
    "form",
    "jquery",
    "jquery-plugin",
    "autocomplete",
    "hierarchy"
  ],
  "scripts": {
    "sound:plock": "play -q -v 0.2 $(find /usr/share/sounds/ -type f -name *device-added* | head -n 1)",
    "sound:microwave": "play -q -v 0.1 $(find /usr/share/sounds/ -type f -name *complete* | head -n 1)",
    "sound:trash": "play -q -v 0.15 $(find /usr/share/sounds/ -type f -name *trash*  | head -n 1)",
    "clean:js": "rm $(find ./build/ -type f -regex '.*\\.[jt]sx?'); npm run --silent sound:trash",
    "clean:dir": "rm -rf ./build; npm run --silent sound:trash",
    "build": "clear; npm run --silent clean:dir; cp ./src/* ./build/ && npm run --silent sound:microwave",
    "test": "clear; npm run --silent build && ./bin/mocha --compilers js:babel-core/register --require jsdom-global/register && npm run --silent sound:plock",
    "test:monitor": "nodemon -x \"rm -rf ./build; cp ./src/* ./build/ && ./bin/mocha --compilers js:babel-core/register --require jsdom-global/register && npm run --silent sound:plock\"",
    "prepublishOnly": "npm run --silent test"
  },
  "devDependencies": {
    "babel-cli": "*",
    "babel-eslint": "*",
    "babel-preset-flow": "*",
    "babel-preset-env": "*",
    "chai": "*",
    "del-cli": "*",
    "eslint": "*",
    "eslint-plugin-flowtype": "*",
    "flow-bin": "*",
    "jquery": "3.x.x",
    "jsdom": "*",
    "jsdom-global": "*",
    "mocha": "*",
    "nodemon": "*"
  },
  "dependencies": {},
  "nodemonConfig": {
    "ignore": [
        "build",
        "built",
        "dist",
        "bin",
        "node_modules"
    ]
  }
}
